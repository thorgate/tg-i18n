# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 140
trim_trailing_whitespace = false

[package.json]
indent_size = 2

[tsconfig.json]
indent_size = 2

[tsconfig.base.json]
indent_size = 2

[tslint.json]
indent_size = 2
