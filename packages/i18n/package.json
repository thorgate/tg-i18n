{
  "name": "@thorgate/i18n",
  "version": "1.0.0-alpha1",
  "description": "Tool to generate translation files and provide them to React apps.",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thorgate/tg-i18n.git"
  },
  "keywords": [
    "tg-i18n",
    "react",
    "react-dom",
    "i18n",
    "translations",
    "gettext",
    "higher order component",
    "hoc"
  ],
  "author": "Thorgate <hi@thorgate.eu>",
  "contributors": [
    "Jürno Ader <jyrno42@gmail.com> (https://github.com/Jyrno42)",
    "Jörgen Ader <jorgen.ader@gmail.com> (https://github.com/metsavaht)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thorgate/tg-i18n/issues"
  },
  "homepage": "https://github.com/thorgate/tg-i18n",
  "devDependencies": {
    "coveralls": "3.0.2",
    "jest-cli": "23.6.0",
    "rimraf": "*",
    "rollup": "0.66.2",
    "ts-jest": "23.10.1",
    "tslint": "5.11.0",
    "typescript": "3.0.3"
  },
  "peerDependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "dependencies": {
    "create-react-context": "0.2.3",
    "hoist-non-react-statics": "3.0.1",
    "jed": "1.1.1",
    "prop-types": "15.6.2",
    "tslib": "1.9.3",
    "warning": "4.0.2"
  },
  "files": [
    "lib/"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint -p tsconfig.lint.json",
    "prebuild": "yarn clean -s && yarn lint",
    "build": "rollup -c=../../rollup.config.js",
    "test": "jest",
    "test:coverage": "yarn test -- --coverage",
    "coveralls": "yarn coverage && cat ./coverage/lcov.info | coveralls",
    "prepublish": "yarn build",
    "prepare": "yarn build -s",
    "prepublishOnly": "yarn build -s"
  }
}
